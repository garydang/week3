<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Title">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="10dp"
                  android:id="@+id/custom1">
        <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:textColor="#E91E63"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/edit_text1"
                android:importantForAutofill="no"/>

        <ImageView
                android:layout_width="50dp"
                android:background="#E91E63" android:id="@+id/displayColor" android:layout_height="50dp"/>
    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/custom2"
                                                  android:layout_below="@id/custom1">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setPink"
                android:background="#E91E63"
                android:layout_weight="1"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setPurple"
                android:background="#9C27B0"
                android:layout_weight="1"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setIndigo"
                android:background="#3F51B5"
                android:layout_weight="1"
        />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/custom3"
                                                  android:layout_below="@id/custom2">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setLightblue"
                android:background="#03A9F4"
                android:layout_weight="1"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setTeal"
                android:background="#009688"
                android:layout_weight="1"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setGreen"
                android:background="#4CAF50"
                android:layout_weight="1"
        />

    </android.support.v7.widget.LinearLayoutCompat>
    <Button
            android:text="Save"
            android:layout_below="@id/custom3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/save"/>

</RelativeLayout>